# |__/ /$$__  $$      | $$  /$ | $$| $$$    /$$$
#  /$$|__/  \ $$      | $$ /$$$| $$| $$$$  /$$$$
# | $$   /$$$$$/      | $$/$$ $$ $$| $$ $$/$$ $$
# | $$  |___  $$      | $$$$_  $$$$| $$  $$$| $$
# | $$ /$$  \ $$      | $$$/ \  $$$| $$\  $ | $$
# | $$|  $$$$$$/      | $$/   \  $$| $$ \/  | $$
